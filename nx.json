{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/lib,dist"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "prettier": {
      "dependsOn": [
        "^prettier"
      ]
    }
  },
  "defaultBase": "main"
}
